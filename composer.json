{
    "require": {
        "johnpbloch/wordpress": "^5.9",
        "wpackagist-plugin/wordpress-seo": "^18.6",
        "wpackagist-theme/twentyseventeen": "^2.9",
        "wpackagist-plugin/fakerpress": "^0.5.3"
    },
    "config": {
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true,
            "composer/installers": true
        }
    },
    "scripts": {
        "autoload": "cd wp-content/pluginsalertopet && composer dump-autoload",
        "reactivate-plugin": "wp plugin deactivate alertopet && wp plugin activate alertopet"
    },
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ]
}
